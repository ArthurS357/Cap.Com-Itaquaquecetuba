generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

// Modelo de dados

model Category {
  id            Int        @id @default(autoincrement())
  name          String     @unique
  slug          String     @unique
  imageUrl      String?
  parentId      Int?
  parent        Category?  @relation("SubCategories", fields: [parentId], references: [id])
  subCategories Category[] @relation("SubCategories")
  products      Product[]
}

model Product {
  id             Int                    @id @default(autoincrement())
  name           String                 // Ex: "Toner HP 85A", "Impressora HP DeskJet 2774"
  slug           String                 @unique
  description    String?
  imageUrl       String?
  price          Float?                 // Preço para produtos de venda direta
  type           String                 // Ex: "TONER", "IMPRESSORA", "RECARGA_JATO_TINTA"
  brandId        Int
  brand          Brand                  @relation(fields: [brandId], references: [id])
  categoryId     Int
  category       Category               @relation(fields: [categoryId], references: [id])
  compatibleWith PrinterCompatibility[] @relation("CartridgeSide")
  createdAt      DateTime               @default(now())
}

model Printer {
  id                   Int                    @id @default(autoincrement())
  modelName            String                 @unique
  brandId              Int
  brand                Brand                  @relation(fields: [brandId], references: [id])
  compatibleCartridges PrinterCompatibility[] @relation("PrinterSide")
}

model PrinterCompatibility {
  cartridgeId Int
  cartridge   Product @relation("CartridgeSide", fields: [cartridgeId], references: [id])
  printerId   Int
  printer     Printer @relation("PrinterSide", fields: [printerId], references: [id])

  @@id([cartridgeId, printerId])
}

model Brand {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  slug     String    @unique 
  products Product[]
  printers Printer[]
}

model StoreConfig {
  id        Int      @id @default(autoincrement())
  key       String   @unique // Ex: "bannerMessage"
  value     String?  // O texto do banner
  isActive  Boolean  @default(true) // Se o banner aparece ou não
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
